<%= form_for(@recipe) do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :ingredients %>
  <br>
  <%= f.fields_for :ingredients do |ff| %>
    <%= ff.label :name %>
    <%= ff.text_field :name %>
    <br>
    <%= ff.label :quantity %>
    <%= ff.text_field :quantity %>
    <br>
  <% end %>
  <br>
  <%= f.submit%>
<% end %>